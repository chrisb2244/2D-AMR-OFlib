DEBUG_OPT = -g
NO_DEBUG_OPT = 

OF_Major = $(shell echo $(WM_PROJECT_VERSION) | sed -e 's|\.[0-9]*\.[0-9]*||')
OF_Patch = $(shell echo $(WM_PROJECT_VERSION) | sed -e 's|[0-9]*\.[0-9]*\.||')
OF_Minor = $(shell echo $(WM_PROJECT_VERSION) | sed -e 's|[0-9]*\.\([0-9]*\)\.[0-9]*|\1|')

MACRO_DEFINED= \
	-DOF_MAJOR=$(OF_Major) \
	-DOF_MINOR=$(OF_Minor) \
	-DOF_PATCH=$(OF_Patch) 

EXE_INC = \
	$(DEBUG_OPT) \
	$(MACRO_DEFINED) \
	-I$(LIB_SRC)/dynamicFvMesh/lnInclude \
    -I$(LIB_SRC)/finiteVolume/lnInclude \
    -I$(LIB_SRC)/dynamicMesh/lnInclude \
    -I$(LIB_SRC)/meshTools/lnInclude \
    -I$(LIB_SRC)/OpenFOAM/lnInclude

LIB_LIBS= \
	-lOpenFOAM \
	-lfiniteVolume

EXE_LIBS = \
    -lfiniteVolume \
    -lOpenFOAM
